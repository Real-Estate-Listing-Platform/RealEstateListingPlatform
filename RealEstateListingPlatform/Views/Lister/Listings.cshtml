@model List<DAL.Models.Listing>

@{
    ViewData["Title"] = "Listings";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
}

<div class="listings-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-buildings me-2"></i>Listings Management
                </h1>
                <p class="page-subtitle text-muted">Manage all your property listings</p>
            </div>
            <a asp-controller="Lister" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Create New Listing
            </a>
        </div>
    </div>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewBag.WarningMessage != null || TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @(ViewBag.WarningMessage ?? TempData["Warning"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter and Search -->
    <div class="filter-section mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search listings...">
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Status</option>
                    <option value="Published">Published</option>
                    <option value="Draft">Draft</option>
                    <option value="PendingReview">Pending Review</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">All Types</option>
                    <option value="Sale">For Sale</option>
                    <option value="Rent">For Rent</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">Sort By</option>
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="price-low">Price: Low to High</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100">
                    <i class="bi bi-funnel me-2"></i>More Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="mini-stat-card">
                <div class="stat-value">@Model.Count</div>
                <div class="stat-label">Total</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card">
                <div class="stat-value">@Model.Count(l => l.Status == "Published")</div>
                <div class="stat-label">Published</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card">
                <div class="stat-value">@Model.Count(l => l.Status == "Draft")</div>
                <div class="stat-label">Drafts</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card">
                <div class="stat-value">@Model.Count(l => l.Status == "PendingReview")</div>
                <div class="stat-label">Pending</div>
            </div>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>You have not created any listings yet. 
            <a asp-controller="Listings" asp-action="Create" class="alert-link">Create your first listing</a>
        </div>
    }
    else
    {
        <!-- Listings Table -->
        <div class="listings-table-card">
        <div class="table-responsive">
            <table class="table table-hover listings-table">
                <thead>
                    <tr>
                        <th>Property</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var listing in Model)
                    {
                        <tr>
                            <td>
                                <div class="property-info">
                                    <div class="property-image">
                                        <i class="bi bi-building"></i>
                                    </div>
                                    <div class="property-details">
                                        <h6 class="property-title">@listing.Title</h6>
                                        <span class="property-type-badge">@(listing.PropertyType ?? "N/A")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (listing.TransactionType == "Sale")
                                {
                                    <span class="badge bg-primary">For Sale</span>
                                }
                                else if (listing.TransactionType == "Rent")
                                {
                                    <span class="badge bg-info">For Rent</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@listing.TransactionType</span>
                                }
                            </td>
                            <td class="fw-bold text-success">
                                @listing.Price.ToString("N0") <span class="text-muted small">VND</span>
                            </td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> 
                                    @if (!string.IsNullOrEmpty(listing.District) && !string.IsNullOrEmpty(listing.City))
                                    {
                                        <text>@listing.District, @listing.City</text>
                                    }
                                    else if (!string.IsNullOrEmpty(listing.City))
                                    {
                                        <text>@listing.City</text>
                                    }
                                    else
                                    {
                                        <span>No location</span>
                                    }
                                </small>
                            </td>
                            <td>
                                <partial name="_StatusBadge" model="@(listing.Status ?? "Draft")" />
                            </td>
                            <td>
                                <small class="text-muted">
                                    @(listing.CreatedAt?.ToString("MMM dd, yyyy") ?? "N/A")
                                </small>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-controller="Lister" asp-action="Edit" asp-route-id="@listing.Id" 
                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-controller="Lister" asp-action="Details" asp-route-id="@listing.Id" 
                                       class="btn btn-sm btn-outline-info" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" title="Delete"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                            data-listing-id="@listing.Id" data-listing-title="@listing.Title">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="table-footer">
            <div class="pagination-info">
                Showing 1 to @Model.Count of @Model.Count entries
            </div>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Listing
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Are you sure you want to delete "<strong id="listingTitleToDelete"></strong>" permanently?</p>
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. All data and media associated with this listing will be permanently removed.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <form id="deleteForm" asp-controller="Lister" asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" id="listingIdToDelete" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Yes, Delete It
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle delete modal
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const listingId = button.getAttribute('data-listing-id');
            const listingTitle = button.getAttribute('data-listing-title');
            
            document.getElementById('listingIdToDelete').value = listingId;
            document.getElementById('listingTitleToDelete').textContent = listingTitle;
        });
    </script>
}

<style>
    .listings-container {
        max-width: 1400px;
    }

    /* Filter Section */
    .filter-section {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    /* Mini Stat Cards */
    .mini-stat-card {
        background: white;
        padding: 1.25rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .mini-stat-card:hover {
        transform: translateY(-2px);
    }

    .mini-stat-card .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .mini-stat-card .stat-label {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-top: 0.25rem;
    }

    /* Listings Table Card */
    .listings-table-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .listings-table {
        margin-bottom: 0;
    }

    .listings-table thead {
        background: #f8f9fa;
    }

    .listings-table thead th {
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #2c3e50;
        padding: 1rem;
        white-space: nowrap;
    }

    .listings-table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }

    .listings-table tbody tr {
        transition: background-color 0.2s ease;
    }

    .listings-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Property Info */
    .property-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .property-image {
        width: 50px;
        height: 50px;
        border-radius: 8px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .property-details {
        flex-grow: 1;
    }

    .property-title {
        font-size: 0.95rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #2c3e50;
    }

    .property-type-badge {
        font-size: 0.75rem;
        color: #7f8c8d;
        background: #f0f0f0;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    /* Performance Stats */
    .performance-stats {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .stat-item {
        font-size: 0.85rem;
        white-space: nowrap;
    }

    .stat-item i {
        margin-right: 0.25rem;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .action-buttons .btn {
        padding: 0.375rem 0.625rem;
    }

    /* Table Footer */
    .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-top: 1px solid #dee2e6;
        background: #f8f9fa;
    }

    .pagination-info {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .property-info {
            flex-direction: column;
            align-items: flex-start;
        }

        .action-buttons {
            flex-direction: column;
        }

        .table-footer {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
