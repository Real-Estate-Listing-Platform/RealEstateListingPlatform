@model List<RealEstateListingPlatform.Controllers.MockCustomer>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
}

<div class="customers-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-people me-2"></i>Customers & Leads
                </h1>
                <p class="page-subtitle text-muted">Manage your customer inquiries and leads</p>
            </div>
            <button class="btn btn-primary btn-lg">
                <i class="bi bi-envelope me-2"></i>Send Bulk Email
            </button>
        </div>
    </div>

    <!-- Filter and Search -->
    <div class="filter-section mb-4">
        <div class="row g-3">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search by name, email, or phone...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option value="">All Status</option>
                    <option value="New">New</option>
                    <option value="Contacted">Contacted</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select">
                    <option value="">Sort By</option>
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="name">Name A-Z</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100">
                    <i class="bi bi-funnel me-2"></i>Filters
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="mini-stat-card stat-total">
                <i class="bi bi-people-fill stat-icon"></i>
                <div class="stat-value">@Model.Count</div>
                <div class="stat-label">Total Leads</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-new">
                <i class="bi bi-person-plus-fill stat-icon"></i>
                <div class="stat-value">@Model.Count(c => c.Status == "New")</div>
                <div class="stat-label">New Leads</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-contacted">
                <i class="bi bi-chat-dots-fill stat-icon"></i>
                <div class="stat-value">@Model.Count(c => c.Status == "Contacted")</div>
                <div class="stat-label">Contacted</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-closed">
                <i class="bi bi-check-circle-fill stat-icon"></i>
                <div class="stat-value">@Model.Count(c => c.Status == "Closed")</div>
                <div class="stat-label">Closed Deals</div>
            </div>
        </div>
    </div>

    <!-- Customers List -->
    <div class="customers-list-card">
        @foreach (var customer in Model)
        {
            <div class="customer-card">
                <div class="customer-header">
                    <div class="customer-avatar">
                        @customer.Name.Substring(0, 1).ToUpper()
                    </div>
                    <div class="customer-info">
                        <h5 class="customer-name">@customer.Name</h5>
                        <div class="customer-contact">
                            <span class="contact-item">
                                <i class="bi bi-envelope"></i> @customer.Email
                            </span>
                            <span class="contact-item">
                                <i class="bi bi-telephone"></i> @customer.Phone
                            </span>
                        </div>
                    </div>
                    <div class="customer-status">
                        @switch (customer.Status)
                        {
                            case "New":
                                <span class="badge bg-danger badge-pulse">
                                    <i class="bi bi-circle-fill"></i> New
                                </span>
                                break;
                            case "Contacted":
                                <span class="badge bg-warning">
                                    <i class="bi bi-chat-dots"></i> Contacted
                                </span>
                                break;
                            case "Closed":
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Closed
                                </span>
                                break;
                        }
                    </div>
                </div>

                <div class="customer-details">
                    <div class="interested-property">
                        <strong>Interested in:</strong>
                        <p class="property-name">
                            <i class="bi bi-building"></i> @customer.InterestedProperty
                        </p>
                    </div>

                    <div class="customer-message">
                        <strong>Message:</strong>
                        <p class="message-text">@customer.Message</p>
                    </div>

                    <div class="customer-meta">
                        <span class="meta-item">
                            <i class="bi bi-clock"></i>
                            Contacted @GetTimeAgo(customer.ContactedAt)
                        </span>
                    </div>
                </div>

                <div class="customer-actions">
                    <button class="btn btn-sm btn-primary">
                        <i class="bi bi-chat-left-text"></i> Reply
                    </button>
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-telephone"></i> Call
                    </button>
                    <button class="btn btn-sm btn-outline-info">
                        <i class="bi bi-calendar-check"></i> Schedule
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit Note</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-check2"></i> Mark as Contacted</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-check-circle"></i> Close Lead</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-trash"></i> Delete</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="pagination-section">
        <div class="pagination-info">
            Showing 1 to @Model.Count of @Model.Count entries
        </div>
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@functions {
    string GetTimeAgo(DateTime date)
    {
        var timeSpan = DateTime.Now - date;
        
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";
        
        return date.ToString("MMM dd, yyyy");
    }
}

<style>
    .customers-container {
        max-width: 1400px;
    }

    /* Filter Section */
    .filter-section {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    /* Mini Stat Cards */
    .mini-stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .mini-stat-card:hover {
        transform: translateY(-4px);
    }

    .mini-stat-card .stat-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        opacity: 0.8;
    }

    .stat-total .stat-icon { color: #667eea; }
    .stat-new .stat-icon { color: #dc3545; }
    .stat-contacted .stat-icon { color: #ffc107; }
    .stat-closed .stat-icon { color: #28a745; }

    .mini-stat-card .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .mini-stat-card .stat-label {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-top: 0.25rem;
    }

    /* Customers List Card */
    .customers-list-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .customer-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .customer-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    }

    /* Customer Header */
    .customer-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        border-bottom: 1px solid #f0f0f0;
    }

    .customer-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        flex-shrink: 0;
    }

    .customer-info {
        flex-grow: 1;
    }

    .customer-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .customer-contact {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .contact-item {
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .contact-item i {
        margin-right: 0.25rem;
    }

    .customer-status {
        flex-shrink: 0;
    }

    .badge-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    /* Customer Details */
    .customer-details {
        padding: 1.5rem;
        background: #f8f9fa;
    }

    .interested-property,
    .customer-message {
        margin-bottom: 1rem;
    }

    .interested-property strong,
    .customer-message strong {
        display: block;
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .property-name {
        font-size: 1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0;
    }

    .property-name i {
        color: #667eea;
        margin-right: 0.5rem;
    }

    .message-text {
        font-size: 0.95rem;
        color: #2c3e50;
        line-height: 1.6;
        margin-bottom: 0;
        font-style: italic;
    }

    .customer-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .meta-item i {
        margin-right: 0.25rem;
    }

    /* Customer Actions */
    .customer-actions {
        display: flex;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        border-top: 1px solid #f0f0f0;
        background: white;
    }

    /* Pagination */
    .pagination-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .pagination-info {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .customer-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .customer-contact {
            flex-direction: column;
            gap: 0.5rem;
        }

        .customer-actions {
            flex-wrap: wrap;
        }

        .pagination-section {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
