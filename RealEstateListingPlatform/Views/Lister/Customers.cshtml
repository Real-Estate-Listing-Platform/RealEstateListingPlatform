@{
    ViewData["Title"] = "Customers & Leads";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">
                        <i class="bi bi-people me-2"></i>Customers & Leads
                    </h1>
                    <p class="page-subtitle text-muted">Manage your customer inquiries and leads</p>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active" data-filter="all">All</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="New">New</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="Contacted">Contacted</button>
                    <button type="button" class="btn btn-outline-primary" data-filter="Closed">Closed</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4" id="leadStats">
        <div class="col-md-3">
            <div class="mini-stat-card stat-total">
                <i class="bi bi-people-fill stat-icon"></i>
                <div class="stat-value" id="totalLeads">0</div>
                <div class="stat-label">Total Leads</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-new">
                <i class="bi bi-star-fill stat-icon"></i>
                <div class="stat-value" id="newLeads">0</div>
                <div class="stat-label">New</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-contacted">
                <i class="bi bi-chat-dots-fill stat-icon"></i>
                <div class="stat-value" id="contactedLeads">0</div>
                <div class="stat-label">Contacted</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mini-stat-card stat-closed">
                <i class="bi bi-check-circle-fill stat-icon"></i>
                <div class="stat-value" id="closedLeads">0</div>
                <div class="stat-label">Closed</div>
            </div>
        </div>
    </div>

    <!-- Leads List -->
    <div class="customers-list-card" id="leadsContainer">
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<!-- Lead Detail Modal -->
<div class="modal fade" id="leadDetailModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Lead Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="leadDetailContent">
                <!-- Content will be loaded dynamically -->
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Update Lead Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="updateLeadId" />
                <div class="mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <select class="form-select rounded-3" id="updateStatus">
                        <option value="New">New</option>
                        <option value="Contacted">Contacted</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Note (Optional)</label>
                    <textarea class="form-control rounded-3" id="updateNote" rows="3" placeholder="Add a note about this lead..."></textarea>
                </div>
                <div id="updateStatusError" class="alert alert-danger d-none"></div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded-pill" id="saveStatusBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .customers-container {
            max-width: 1400px;
        }

        /* Mini Stat Cards */
        .mini-stat-card {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .mini-stat-card:hover {
            transform: translateY(-4px);
        }

        .mini-stat-card .stat-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            opacity: 0.8;
        }

        .stat-total .stat-icon { color: #667eea; }
        .stat-new .stat-icon { color: #28a745; }
        .stat-contacted .stat-icon { color: #0d6efd; }
        .stat-closed .stat-icon { color: #6c757d; }

        .mini-stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .mini-stat-card .stat-label {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-top: 0.25rem;
        }

        /* Customers List Card */
        .customers-list-card {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .customer-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .customer-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.12);
        }

        /* Customer Header */
        .customer-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .customer-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: 700;
            flex-shrink: 0;
        }

        .customer-info {
            flex-grow: 1;
        }

        .customer-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .customer-contact {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .contact-item {
            font-size: 0.85rem;
            color: #7f8c8d;
        }

        .contact-item i {
            margin-right: 0.25rem;
        }

        .customer-status {
            flex-shrink: 0;
        }

        .badge-pulse {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        /* Customer Details */
        .customer-details {
            padding: 1.5rem;
            background: #f8f9fa;
        }

        .interested-property,
        .customer-message {
            margin-bottom: 1rem;
        }

        .interested-property strong,
        .customer-message strong {
            display: block;
            font-size: 0.85rem;
            color: #7f8c8d;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .property-name {
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0;
        }

        .property-name i {
            color: #667eea;
            margin-right: 0.5rem;
        }

        .message-text {
            font-size: 0.95rem;
            color: #2c3e50;
            line-height: 1.6;
            margin-bottom: 0;
            font-style: italic;
        }

        .customer-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.85rem;
            color: #7f8c8d;
        }

        .meta-item i {
            margin-right: 0.25rem;
        }

        /* Customer Actions */
        .customer-actions {
            display: flex;
            gap: 0.5rem;
            padding: 1rem 1.5rem;
            border-top: 1px solid #f0f0f0;
            background: white;
        }

        /* Badge Styles */
        .badge {
            padding: 0.5rem 1rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .customer-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .customer-contact {
                flex-direction: column;
                gap: 0.5rem;
            }

            .customer-actions {
                flex-wrap: wrap;
            }
        }
    </style>
}

@section Scripts {
    <script>
        let allLeads = [];
        let currentFilter = 'all';

        // Load statistics
        async function loadStatistics() {
            try {
                const response = await fetch('/api/Leads/Statistics');
                const result = await response.json();
                
                if (result.success && result.data) {
                    document.getElementById('totalLeads').textContent = result.data.totalLeads;
                    document.getElementById('newLeads').textContent = result.data.newLeads;
                    document.getElementById('contactedLeads').textContent = result.data.contactedLeads;
                    document.getElementById('closedLeads').textContent = result.data.closedLeads;
                }
            } catch (error) {
                console.error('Error loading statistics:', error);
            }
        }

        // Load leads
        async function loadLeads() {
            try {
                const response = await fetch('/api/Leads/MyLeadsAsLister');
                const result = await response.json();
                
                if (result.success && result.data) {
                    allLeads = result.data;
                    renderLeads();
                }
            } catch (error) {
                console.error('Error loading leads:', error);
                document.getElementById('leadsContainer').innerHTML = 
                    '<div class="alert alert-danger m-4">Failed to load leads. Please refresh the page.</div>';
            }
        }

        // Render leads
        function renderLeads() {
            const container = document.getElementById('leadsContainer');
            const filteredLeads = currentFilter === 'all' 
                ? allLeads 
                : allLeads.filter(lead => lead.status === currentFilter);
            
            if (filteredLeads.length === 0) {
                container.innerHTML = '<div class="text-center py-5 text-muted">No leads found</div>';
                return;
            }
            
            container.innerHTML = filteredLeads.map(lead => {
                const initials = lead.seekerName.split(' ').map(n => n[0]).join('').toUpperCase();
                const statusBadge = getStatusBadge(lead.status);
                
                return `
                    <div class="customer-card">
                        <div class="customer-header">
                            <div class="customer-avatar">${initials}</div>
                            <div class="customer-info">
                                <h5 class="customer-name">${lead.seekerName}</h5>
                                <div class="customer-contact">
                                    <span class="contact-item">
                                        <i class="bi bi-envelope"></i> ${lead.seekerEmail}
                                    </span>
                                    ${lead.seekerPhone ? `<span class="contact-item"><i class="bi bi-telephone"></i> ${lead.seekerPhone}</span>` : ''}
                                </div>
                            </div>
                            <div class="customer-status">${statusBadge}</div>
                        </div>

                        <div class="customer-details">
                            <div class="interested-property">
                                <strong>Interested in:</strong>
                                <p class="property-name">
                                    <i class="bi bi-building"></i> ${lead.listingTitle}
                                </p>
                            </div>

                            <div class="customer-message">
                                <strong>Message:</strong>
                                <p class="message-text">${lead.message || '<em class="text-muted">No message provided</em>'}</p>
                            </div>

                            <div class="customer-meta">
                                <span class="meta-item">
                                    <i class="bi bi-clock"></i>
                                    ${lead.timeAgo}
                                </span>
                                ${lead.appointmentDate ? `<span class="meta-item"><i class="bi bi-calendar-check"></i> ${new Date(lead.appointmentDate).toLocaleString()}</span>` : ''}
                            </div>
                        </div>

                        <div class="customer-actions">
                            <button class="btn btn-sm btn-primary" onclick="viewLeadDetail('${lead.id}')">
                                <i class="bi bi-eye"></i> View Details
                            </button>
                            <button class="btn btn-sm btn-outline-primary" onclick="updateStatus('${lead.id}', '${lead.status}')">
                                <i class="bi bi-pencil"></i> Update Status
                            </button>
                            <a href="mailto:${lead.seekerEmail}" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-envelope"></i> Email
                            </a>
                            ${lead.seekerPhone ? `<a href="tel:${lead.seekerPhone}" class="btn btn-sm btn-outline-success"><i class="bi bi-telephone"></i> Call</a>` : ''}
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Get status badge HTML
        function getStatusBadge(status) {
            switch(status) {
                case 'New':
                    return '<span class="badge bg-success badge-pulse"><i class="bi bi-circle-fill"></i> New</span>';
                case 'Contacted':
                    return '<span class="badge bg-primary"><i class="bi bi-chat-dots"></i> Contacted</span>';
                case 'Closed':
                    return '<span class="badge bg-secondary"><i class="bi bi-check-circle"></i> Closed</span>';
                default:
                    return '<span class="badge bg-light text-dark">' + status + '</span>';
            }
        }

        // Filter buttons
        document.querySelectorAll('[data-filter]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-filter]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                renderLeads();
            });
        });

        // View lead detail
        function viewLeadDetail(leadId) {
            const lead = allLeads.find(l => l.id === leadId);
            if (!lead) return;
            
            const content = `
                <div class="row g-4">
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">Customer Information</h6>
                        <p><strong>Name:</strong> ${lead.seekerName}</p>
                        <p><strong>Email:</strong> <a href="mailto:${lead.seekerEmail}">${lead.seekerEmail}</a></p>
                        ${lead.seekerPhone ? `<p><strong>Phone:</strong> <a href="tel:${lead.seekerPhone}">${lead.seekerPhone}</a></p>` : ''}
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">Listing Information</h6>
                        <p><strong>Property:</strong> ${lead.listingTitle}</p>
                        <p><strong>Address:</strong> ${lead.listingAddress}</p>
                        <p><strong>Price:</strong> ${lead.listingPrice.toLocaleString('vi-VN')} VND</p>
                    </div>
                    <div class="col-12">
                        <h6 class="fw-bold mb-3">Message</h6>
                        <p class="text-muted">${lead.message || 'No message provided'}</p>
                    </div>
                    ${lead.appointmentDate ? `<div class="col-12"><h6 class="fw-bold mb-2">Preferred Appointment</h6><p>${new Date(lead.appointmentDate).toLocaleString()}</p></div>` : ''}
                    ${lead.listerNote ? `<div class="col-12"><h6 class="fw-bold mb-2">Your Note</h6><p class="text-muted">${lead.listerNote}</p></div>` : ''}
                    <div class="col-12">
                        <h6 class="fw-bold mb-2">Status</h6>
                        ${getStatusBadge(lead.status)}
                    </div>
                </div>
            `;
            
            document.getElementById('leadDetailContent').innerHTML = content;
            new bootstrap.Modal(document.getElementById('leadDetailModal')).show();
        }

        // Update status
        function updateStatus(leadId, currentStatus) {
            document.getElementById('updateLeadId').value = leadId;
            document.getElementById('updateStatus').value = currentStatus;
            document.getElementById('updateNote').value = '';
            document.getElementById('updateStatusError').classList.add('d-none');
            new bootstrap.Modal(document.getElementById('updateStatusModal')).show();
        }

        // Save status
        document.getElementById('saveStatusBtn')?.addEventListener('click', async function() {
            const leadId = document.getElementById('updateLeadId').value;
            const status = document.getElementById('updateStatus').value;
            const note = document.getElementById('updateNote').value;
            
            try {
                const response = await fetch('/api/Leads/UpdateStatus', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ leadId, status, listerNote: note || null })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('updateStatusModal')).hide();
                    await loadLeads();
                    await loadStatistics();
                } else {
                    document.getElementById('updateStatusError').textContent = result.message;
                    document.getElementById('updateStatusError').classList.remove('d-none');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                document.getElementById('updateStatusError').textContent = 'An error occurred';
                document.getElementById('updateStatusError').classList.remove('d-none');
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadStatistics();
            loadLeads();
        });
    </script>
}
