@model RealEstateListingPlatform.Models.ListingEditViewModel

@{
    ViewData["Title"] = "Edit Listing";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
    var transactionTypes = ViewData["TransactionTypes"] as SelectList;
    var propertyTypes = ViewData["PropertyTypes"] as SelectList;
    var legalStatuses = ViewData["LegalStatuses"] as SelectList;
    var furnitureStatuses = ViewData["FurnitureStatuses"] as SelectList;
    var directions = ViewData["Directions"] as SelectList;
}

<div class="edit-listing-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-pencil me-2"></i>Edit Listing
                </h1>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <span class="text-muted">Status:</span>
                    <partial name="_StatusBadge" model="@(Model.Status ?? "Draft")" />
                </div>
            </div>
            <a asp-controller="Lister" asp-action="Listings" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Listings
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Package Management Card -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header bg-gradient-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-box-seam me-2"></i>Package Settings for This Listing
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="package-info-box">
                        <div class="package-icon">
                            <i class="bi bi-images"></i>
                        </div>
                        <div class="package-details">
                            <span class="package-label">Photo Limit</span>
                            <span class="package-value" id="currentPhotoLimit">@Model.MaxPhotos photos</span>
                        </div>
                        @if (Model.MaxPhotos <= 5)
                        {
                            <button type="button" class="btn btn-sm btn-outline-primary mt-2 w-100"
                                    data-bs-toggle="modal" data-bs-target="#applyPackageModal"
                                    data-package-type="PHOTO_PACK">
                                <i class="bi bi-arrow-up-circle"></i> Upgrade
                            </button>
                        }
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="package-info-box">
                        <div class="package-icon">
                            <i class="bi bi-camera-video"></i>
                        </div>
                        <div class="package-details">
                            <span class="package-label">Video Upload</span>
                            <span class="package-value">
                                @if (Model.AllowVideo)
                                {
                                    <span class="text-success"><i class="bi bi-check-circle"></i> Enabled</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="bi bi-x-circle"></i> Disabled</span>
                                }
                            </span>
                        </div>
                        @if (!Model.AllowVideo)
                        {
                            <button type="button" class="btn btn-sm btn-outline-success mt-2 w-100" 
                                    data-bs-toggle="modal" data-bs-target="#applyPackageModal"
                                    data-package-type="VIDEO_UPLOAD">
                                <i class="bi bi-plus-circle"></i> Enable Video
                            </button>
                        }
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="package-info-box">
                        <div class="package-icon">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <div class="package-details">
                            <span class="package-label">Listing Type</span>
                            <span class="package-value">
                                @if (Model.IsFreeListingorder)
                                {
                                    <span class="badge bg-success">Free Tier</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Premium</span>
                                }
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="alert alert-info mt-3 mb-0">
                <i class="bi bi-lightbulb"></i>
                <strong>Tip:</strong> You can apply photo packs and video packages to this listing to enhance it. 
                Boost packages can be applied from the <a href="@Url.Action("Listings", "Lister")" class="alert-link">Listings Management</a> page.
                Packages can be purchased from the <a href="@Url.Action("Index", "Package")" class="alert-link">Package Marketplace</a>.
            </div>
        </div>
    </div>

    <form asp-controller="Lister" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" id="selectedPhotoPackageId" name="photoPackageId" value="" />
        <input type="hidden" id="selectedVideoPackageId" name="videoPackageId" value="" />

        <!-- Basic Information -->
        <div class="form-card mb-4">
            <div class="form-card-header">
                <h4 class="form-card-title">
                    <i class="bi bi-info-circle me-2"></i>Basic Information
                </h4>
            </div>
            <div class="form-card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Title" class="form-label required"></label>
                        <input asp-for="Title" class="form-control form-control-lg" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TransactionType" class="form-label required">Transaction Type</label>
                        <select asp-for="TransactionType" asp-items="transactionTypes" class="form-select">
                            <option value="">-- Select Transaction Type --</option>
                        </select>
                        <span asp-validation-for="TransactionType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PropertyType" class="form-label required">Property Type</label>
                        <select asp-for="PropertyType" asp-items="propertyTypes" class="form-select">
                            <option value="">-- Select Property Type --</option>
                        </select>
                        <span asp-validation-for="PropertyType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label required"></label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" type="number" step="1000" />
                            <span class="input-group-text">VND</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Location Details -->
        <div class="form-card mb-4">
            <div class="form-card-header">
                <h4 class="form-card-title">
                    <i class="bi bi-geo-alt me-2"></i>Location Details
                </h4>
            </div>
            <div class="form-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="District" class="form-label"></label>
                        <input asp-for="District" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Ward" class="form-label"></label>
                        <input asp-for="Ward" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StreetName" class="form-label">Street Name</label>
                        <input asp-for="StreetName" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="HouseNumber" class="form-label">House Number</label>
                        <input asp-for="HouseNumber" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Area" class="form-label"></label>
                        <input asp-for="Area" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Direction" class="form-label"></label>
                        <select asp-for="Direction" asp-items="directions" class="form-select">
                            <option value="">-- Select Direction --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Latitude" class="form-label"></label>
                        <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Longitude" class="form-label"></label>
                        <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Property Specifications -->
        <div class="form-card mb-4">
            <div class="form-card-header">
                <h4 class="form-card-title">
                    <i class="bi bi-house me-2"></i>Property Specifications
                </h4>
            </div>
            <div class="form-card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Bedrooms" class="form-label"></label>
                        <input asp-for="Bedrooms" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Bedrooms" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Bathrooms" class="form-label"></label>
                        <input asp-for="Bathrooms" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Bathrooms" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Floors" class="form-label"></label>
                        <input asp-for="Floors" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Floors" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LegalStatus" class="form-label">Legal Status</label>
                        <select asp-for="LegalStatus" asp-items="legalStatuses" class="form-select">
                            <option value="">-- Select Legal Status --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FurnitureStatus" class="form-label">Furniture Status</label>
                        <select asp-for="FurnitureStatus" asp-items="furnitureStatuses" class="form-select">
                            <option value="">-- Select Furniture Status --</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Media Management -->
        <div class="form-card mb-4">
            <div class="form-card-header">
                <h4 class="form-card-title">
                    <i class="bi bi-images me-2"></i>Photos & Videos
                </h4>
            </div>
            <div class="form-card-body">
                @if (Model.ExistingMedia != null && Model.ExistingMedia.Count > 0)
                {
                    <div class="existing-media mb-4">
                        <h5 class="mb-3">Current Media</h5>
                        <div class="row g-3" id="existingMediaContainer">
                            @foreach (var media in Model.ExistingMedia)
                            {
                                <div class="col-md-3 media-item" data-media-id="@media.Id">
                                    <div class="media-card">
                                        @if (media.MediaType == "image")
                                        {
                                            <img src="@media.Url" class="img-fluid" alt="Listing photo" />
                                        }
                                        else
                                        {
                                            <video src="@media.Url" class="img-fluid" controls></video>
                                        }
                                        <button type="button" class="btn btn-sm btn-danger delete-media-btn" data-media-id="@media.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>No media files uploaded yet.
                    </div>
                }

                <div class="upload-section">
                    <label class="form-label">Upload Additional Media</label>
                    <input id="mediaFiles" type="file" name="mediaFiles" multiple accept="image/*,video/*" class="form-control" />
                    <div class="form-text">
                        <i class="bi bi-info-circle me-1"></i>
                        Accepted formats: JPG, PNG, WEBP, MP4, AVI, MOV. Maximum 10MB per file.
                    </div>
                    <div id="mediaPreview" class="row g-3 mt-3"></div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions mb-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle me-2"></i>Save Changes
            </button>
            <a asp-controller="Lister" asp-action="Listings" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle me-2"></i>Cancel
            </a>
        </div>
    </form>

    <!-- Quick Actions -->
    <div class="quick-actions">
        @if (string.Equals(Model.Status, "Draft", StringComparison.OrdinalIgnoreCase))
        {
            <form asp-controller="Lister" asp-action="SubmitForReview" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-send me-2"></i>Submit for Review
                </button>
            </form>
        }
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash me-2"></i>Delete Listing
        </button>
    </div>

    <!-- Metadata -->
    <div class="metadata-card mt-4">
        <div class="row g-3">
            @if (Model.CreatedAt.HasValue)
            {
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="bi bi-calendar-plus me-2"></i>
                        Created: @Model.CreatedAt.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                    </small>
                </div>
            }
            @if (Model.UpdatedAt.HasValue)
            {
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="bi bi-calendar-check me-2"></i>
                        Last updated: @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                    </small>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Listing
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Are you sure you want to delete this listing permanently?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. All data associated with this listing will be permanently removed.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-controller="Lister" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Yes, Delete It
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Apply Package Modal -->
<div class="modal fade" id="applyPackageModal" tabindex="-1" aria-labelledby="applyPackageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="applyPackageModalLabel">
                    <i class="bi bi-box-seam me-2"></i>Select Packages to Apply
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div>
                <div class="modal-body">
                    @{
                        var availablePackages = ViewBag.AvailablePackages as List<BLL.DTOs.UserPackageDto> ?? new List<BLL.DTOs.UserPackageDto>();
                        var photoPackages = availablePackages.Where(p => p.Package.PackageType == "PHOTO_PACK").ToList();
                        var videoPackages = availablePackages.Where(p => p.Package.PackageType == "VIDEO_UPLOAD").ToList();
                    }
                    
                    <div class="mb-3" id="modalInstructions">
                        <p class="text-muted">Select packages to apply when you save changes:</p>
                    </div>
                    
                    <div class="package-selection-container">
                        @if (photoPackages.Any())
                        {
                            <div class="package-group mb-3" id="photoPackageGroup" style="display: none;">
                                <h6 class="mb-2"><i class="bi bi-images text-primary"></i> Photo Packages</h6>
                                @foreach (var package in photoPackages)
                                {
                                    <div class="form-check package-option">
                                        <input class="form-check-input photo-package-radio" type="radio" name="photoPackageSelection" 
                                               id="photoPackage_@package.Id" value="@package.Id">
                                        <label class="form-check-label w-100" for="photoPackage_@package.Id">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <strong>@package.Package.Name</strong>
                                                    <div class="small text-muted">@package.Package.Description</div>
                                                    <div class="small">
                                                        <span class="badge bg-info">+@package.Package.PhotoLimit photos</span>
                                                        @if (package.ExpiresAt.HasValue)
                                                        {
                                                            <span class="badge bg-secondary">Expires: @package.ExpiresAt.Value.ToString("MMM dd, yyyy")</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                }
                            </div>
                        }

                        @if (videoPackages.Any())
                        {
                            <div class="package-group mb-3" id="videoPackageGroup" style="display: none;">
                                <h6 class="mb-2"><i class="bi bi-camera-video text-success"></i> Video Packages</h6>
                                @foreach (var package in videoPackages)
                                {
                                    <div class="form-check package-option">
                                        <input class="form-check-input video-package-radio" type="radio" name="videoPackageSelection" 
                                               id="videoPackage_@package.Id" value="@package.Id">
                                        <label class="form-check-label w-100" for="videoPackage_@package.Id">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <strong>@package.Package.Name</strong>
                                                    <div class="small text-muted">@package.Package.Description</div>
                                                    <div class="small">
                                                        <span class="badge bg-success">Video Upload Enabled</span>
                                                        @if (package.ExpiresAt.HasValue)
                                                        {
                                                            <span class="badge bg-secondary">Expires: @package.ExpiresAt.Value.ToString("MMM dd, yyyy")</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                }
                            </div>
                        }
                        
                        <!-- No packages message (hidden by default, shown by JS if needed) -->
                        <div class="alert alert-warning mb-0" id="noPackagesMessage" style="display: none;">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>No packages available</strong>
                            <p class="mb-2" id="noPackagesText">You don't have any available packages of this type.</p>
                            <a href="@Url.Action("Index", "Package")" class="btn btn-sm btn-primary">
                                <i class="bi bi-cart-plus me-1"></i>Purchase Packages
                            </a>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3 mb-0" id="packageInfoNote">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> Selected packages will be applied when you click "Save Changes" on the edit form.
                    </div>
                </div>
                <div class="modal-footer" id="modalFooter">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmPackageSelection" data-bs-dismiss="modal">
                        <i class="bi bi-check-circle me-2"></i>Confirm Selection
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Media file preview
        document.getElementById('mediaFiles').addEventListener('change', function(e) {
            const preview = document.getElementById('mediaPreview');
            preview.innerHTML = '';
            
            if (e.target.files.length > 0) {
                Array.from(e.target.files).forEach(file => {
                    const col = document.createElement('div');
                    col.className = 'col-md-3';
                    
                    const card = document.createElement('div');
                    card.className = 'media-preview-card';
                    
                    if (file.type.startsWith('image/')) {
                        const img = document.createElement('img');
                        img.src = URL.createObjectURL(file);
                        img.className = 'img-fluid';
                        card.appendChild(img);
                    } else if (file.type.startsWith('video/')) {
                        const video = document.createElement('video');
                        video.src = URL.createObjectURL(file);
                        video.className = 'img-fluid';
                        video.controls = true;
                        card.appendChild(video);
                    }
                    
                    const fileName = document.createElement('div');
                    fileName.className = 'media-file-name';
                    fileName.textContent = file.name;
                    card.appendChild(fileName);
                    
                    col.appendChild(card);
                    preview.appendChild(col);
                });
            }
        });

        // Delete media AJAX
        document.querySelectorAll('.delete-media-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                if (!confirm('Delete this media file?')) return;
                
                const mediaId = this.dataset.mediaId;
                const mediaItem = this.closest('.media-item');
                
                try {
                    const response = await fetch(`/Lister/DeleteMedia?mediaId=${mediaId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });
                    
                    if (response.ok) {
                        mediaItem.remove();
                        
                        // Check if no media left
                        if (document.querySelectorAll('.media-item').length === 0) {
                            document.querySelector('.existing-media').innerHTML = 
                                '<div class="alert alert-info"><i class="bi bi-info-circle me-2"></i>No media files uploaded yet.</div>';
                        }
                    } else {
                        alert('Failed to delete media. Please try again.');
                    }
                } catch (error) {
                    alert('An error occurred. Please try again.');
                }
            });
        });

        // Handle Apply Package Modal
        const applyPackageModal = document.getElementById('applyPackageModal');
        if (applyPackageModal) {
            // Load previously selected packages when modal opens
            applyPackageModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const packageType = button?.getAttribute('data-package-type');
                
                // Get all elements
                const photoGroup = document.getElementById('photoPackageGroup');
                const videoGroup = document.getElementById('videoPackageGroup');
                const noPackagesMessage = document.getElementById('noPackagesMessage');
                const packageInfoNote = document.getElementById('packageInfoNote');
                const confirmButton = document.getElementById('confirmPackageSelection');
                const noPackagesText = document.getElementById('noPackagesText');
                const modalInstructions = document.getElementById('modalInstructions');
                
                // Hide everything first
                if (photoGroup) photoGroup.style.display = 'none';
                if (videoGroup) videoGroup.style.display = 'none';
                if (noPackagesMessage) noPackagesMessage.style.display = 'none';
                if (packageInfoNote) packageInfoNote.style.display = 'none';
                
                // Determine which packages to show based on button clicked
                if (packageType === 'PHOTO_PACK') {
                    if (modalInstructions) modalInstructions.innerHTML = '<p class="text-muted">Select a photo package to upgrade your photo limit:</p>';
                    
                    if (photoGroup) {
                        const hasPhotos = photoGroup.querySelectorAll('.photo-package-radio').length > 0;
                        if (hasPhotos) {
                            photoGroup.style.display = 'block';
                            if (packageInfoNote) packageInfoNote.style.display = 'block';
                            if (confirmButton) confirmButton.style.display = 'inline-block';
                        } else {
                            if (noPackagesMessage) {
                                noPackagesMessage.style.display = 'block';
                                if (noPackagesText) noPackagesText.textContent = "You don't have any available photo packages.";
                            }
                            if (confirmButton) confirmButton.style.display = 'none';
                        }
                    } else {
                        if (noPackagesMessage) {
                            noPackagesMessage.style.display = 'block';
                            if (noPackagesText) noPackagesText.textContent = "You don't have any available photo packages.";
                        }
                        if (confirmButton) confirmButton.style.display = 'none';
                    }
                } else if (packageType === 'VIDEO_UPLOAD') {
                    if (modalInstructions) modalInstructions.innerHTML = '<p class="text-muted">Select a video package to enable video uploads:</p>';
                    
                    if (videoGroup) {
                        const hasVideos = videoGroup.querySelectorAll('.video-package-radio').length > 0;
                        if (hasVideos) {
                            videoGroup.style.display = 'block';
                            if (packageInfoNote) packageInfoNote.style.display = 'block';
                            if (confirmButton) confirmButton.style.display = 'inline-block';
                        } else {
                            if (noPackagesMessage) {
                                noPackagesMessage.style.display = 'block';
                                if (noPackagesText) noPackagesText.textContent = "You don't have any available video packages.";
                            }
                            if (confirmButton) confirmButton.style.display = 'none';
                        }
                    } else {
                        if (noPackagesMessage) {
                            noPackagesMessage.style.display = 'block';
                            if (noPackagesText) noPackagesText.textContent = "You don't have any available video packages.";
                        }
                        if (confirmButton) confirmButton.style.display = 'none';
                    }
                } else {
                    // Show all packages (fallback - shouldn't normally happen)
                    if (photoGroup) photoGroup.style.display = 'block';
                    if (videoGroup) videoGroup.style.display = 'block';
                    if (packageInfoNote) packageInfoNote.style.display = 'block';
                    if (confirmButton) confirmButton.style.display = 'inline-block';
                }
                
                // Restore previous selections
                const photoPackageId = document.getElementById('selectedPhotoPackageId').value;
                const videoPackageId = document.getElementById('selectedVideoPackageId').value;
                
                if (photoPackageId && packageType === 'PHOTO_PACK') {
                    const photoRadio = document.getElementById('photoPackage_' + photoPackageId);
                    if (photoRadio) photoRadio.checked = true;
                }
                
                if (videoPackageId && packageType === 'VIDEO_UPLOAD') {
                    const videoRadio = document.getElementById('videoPackage_' + videoPackageId);
                    if (videoRadio) videoRadio.checked = true;
                }
            });
            
            // Handle package selection confirmation
            const confirmBtn = document.getElementById('confirmPackageSelection');
            if (confirmBtn) {
                confirmBtn.addEventListener('click', function() {
                    // Get selected photo package
                    const selectedPhotoRadio = document.querySelector('input[name="photoPackageSelection"]:checked');
                    if (selectedPhotoRadio) {
                        document.getElementById('selectedPhotoPackageId').value = selectedPhotoRadio.value;
                        updatePackageDisplay('photo', true);
                    }
                    
                    // Get selected video package
                    const selectedVideoRadio = document.querySelector('input[name="videoPackageSelection"]:checked');
                    if (selectedVideoRadio) {
                        document.getElementById('selectedVideoPackageId').value = selectedVideoRadio.value;
                        updatePackageDisplay('video', true);
                    }
                    
                    // Show success message
                    if (selectedPhotoRadio || selectedVideoRadio) {
                        showPackageSelectionMessage();
                    }
                });
            }
        }
        
        // Update package display to show pending changes
        function updatePackageDisplay(type, selected) {
            if (type === 'photo') {
                const photoLimit = document.getElementById('currentPhotoLimit');
                if (photoLimit && selected) {
                    photoLimit.innerHTML = '@Model.MaxPhotos photos <span class="badge bg-warning ms-2">Upgrade Pending</span>';
                }
            } else if (type === 'video') {
                // Find the video package box by looking for the video icon, then get its parent's package-value
                const packageBoxes = document.querySelectorAll('.package-info-box');
                packageBoxes.forEach(box => {
                    const videoIcon = box.querySelector('.bi-camera-video');
                    if (videoIcon && selected) {
                        const videoStatus = box.querySelector('.package-value');
                        if (videoStatus) {
                            videoStatus.innerHTML = '<span class="text-muted"><i class="bi bi-x-circle"></i> Disabled</span> <span class="badge bg-warning ms-2">Upgrade Pending</span>';
                        }
                    }
                });
            }
        }
        
        // Show message about pending package application
        function showPackageSelectionMessage() {
            // Remove existing message if any
            const existingMsg = document.querySelector('.package-selection-message');
            if (existingMsg) existingMsg.remove();
            
            // Add new message
            const message = document.createElement('div');
            message.className = 'alert alert-warning alert-dismissible fade show package-selection-message';
            message.innerHTML = `
                <i class="bi bi-info-circle me-2"></i>
                <strong>Packages selected!</strong> Click "Save Changes" to apply the selected packages to this listing.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            
            const container = document.querySelector('.edit-listing-container');
            const pageHeader = container.querySelector('.page-header');
            pageHeader.after(message);
            
            // Scroll to message
            message.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    </script>
}

