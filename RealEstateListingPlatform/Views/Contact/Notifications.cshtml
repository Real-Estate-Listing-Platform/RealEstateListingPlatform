@model IEnumerable<DAL.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
    Layout = "_Layout";
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 pb-0 pt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold mb-0">Notifications</h2>
                            <p class="text-muted mb-0">Stay updated with your property interactions</p>
                        </div>
                        <div>
                            <button id="markAllAsRead" class="btn btn-primary btn-sm">
                                <i class="bi bi-check-all me-1"></i> Mark All as Read
                            </button>
                            <a asp-controller="Contact" asp-action="MyLeads" class="btn btn-outline-primary btn-sm ms-2">
                                <i class="bi bi-envelope me-1"></i> My Leads
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-bell-slash display-1 text-muted"></i>
                            <h4 class="mt-3">No notifications yet</h4>
                            <p class="text-muted">You'll see notifications here when you receive messages or updates.</p>
                            <a asp-controller="Listings" asp-action="AllListings" class="btn btn-primary mt-2">
                                <i class="bi bi-search me-1"></i> Browse Properties
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var notification in Model)
                            {
                                <div class="list-group-item border-0 py-3 px-4 @(!notification.IsRead.HasValue || !notification.IsRead.Value ? "bg-light bg-opacity-50" : "")"
                                     data-notification-id="@notification.Id">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center">
                                                @if (notification.Type == "Lead")
                                                {
                                                    <i class="bi bi-envelope-fill text-primary me-3 fs-5"></i>
                                                }
                                                else if (notification.Type == "LeadUpdate")
                                                {
                                                    <i class="bi bi-arrow-clockwise text-success me-3 fs-5"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-info-circle text-info me-3 fs-5"></i>
                                                }

                                                <div>
                                                    <h6 class="mb-1 fw-bold">@notification.Title</h6>
                                                    <p class="mb-1 text-muted">@notification.Message</p>
                                                    <small class="text-muted">
                                                        <i class="bi bi-clock me-1"></i>@notification.CreatedAt?.ToString("MMM dd, yyyy HH:mm")
                                                        @if (!notification.IsRead.HasValue || !notification.IsRead.Value)
                                                        {
                                                            <span class="badge bg-primary rounded-pill ms-2">New</span>
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(notification.RelatedLink))
                                        {
                                            <div class="ms-3">
                                                <a href="@notification.RelatedLink" class="btn btn-sm btn-outline-primary">
                                                    View <i class="bi bi-arrow-right ms-1"></i>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-0 pt-3 pb-4 px-4">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Notifications are automatically created for lead updates and messages
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mark all as read
            $('#markAllAsRead').click(function() {
                var $btn = $(this);
                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Processing...');

                $.ajax({
                    url: '@Url.Action("MarkAllAsRead", "Contact")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Failed to mark all as read. Please try again.');
                            $btn.prop('disabled', false).html('<i class="bi bi-check-all me-1"></i> Mark All as Read');
                        }
                    },
                    error: function() {
                        alert('An error occurred. Please try again.');
                        $btn.prop('disabled', false).html('<i class="bi bi-check-all me-1"></i> Mark All as Read');
                    }
                });
            });

            // Mark individual notification as read when clicked
            $('.list-group-item').click(function(e) {
                if (!$(e.target).is('a') && !$(e.target).is('button') && !$(e.target).is('i')) {
                    var notificationId = $(this).data('notification-id');
                    if (notificationId) {
                        var $item = $(this);
                        $.ajax({
                            url: '@Url.Action("MarkAsRead", "Contact")',
                            type: 'POST',
                            data: { notificationId: notificationId },
                            headers: {
                                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function(data) {
                                if (data.success) {
                                    $item.removeClass('bg-light bg-opacity-50');
                                    $item.find('.badge').remove();
                                }
                            }
                        });
                    }
                }
            });
        });
    </script>
}