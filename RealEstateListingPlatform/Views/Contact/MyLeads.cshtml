@model IEnumerable<DAL.Models.Lead>

@{
    ViewData["Title"] = "My Leads";
    Layout = "_Layout";
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 pb-0 pt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold mb-0">My Leads</h2>
                            <p class="text-muted mb-0">Track your property inquiries and responses</p>
                        </div>
                        <div>
                            <a asp-controller="Contact" asp-action="Notifications" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-bell me-1"></i> Notifications
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-envelope-slash display-1 text-muted"></i>
                            <h4 class="mt-3">No leads yet</h4>
                            <p class="text-muted">Start by contacting property owners to see your leads here.</p>
                            <a asp-controller="Listings" asp-action="AllListings" class="btn btn-primary mt-2">
                                <i class="bi bi-search me-1"></i> Browse Properties
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4">Property</th>
                                        <th>Type</th>
                                        <th>Contact Person</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lead in Model)
                                    {
                                        var userId = ViewData["CurrentUserId"]?.ToString();
                                        var isSeeker = userId == lead.SeekerId.ToString();
                                        var contactPerson = isSeeker ? lead.Lister : lead.Seeker;
                                        var badgeClass = lead.Status switch
                                        {
                                            "New" => "bg-primary",
                                            "Contacted" => "bg-info",
                                            "Closed" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            _ => "bg-secondary"
                                        };

                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0 me-3">
                                                        @if (lead.Listing?.ListingMedia?.Any() == true)
                                                        {
                                                            <img src="@lead.Listing.ListingMedia.First().Url"
                                                                 class="rounded"
                                                                 alt="@lead.Listing.Title"
                                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                                        }
                                                        else
                                                        {
                                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                                 style="width: 60px; height: 60px;">
                                                                <i class="bi bi-house text-muted"></i>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1 fw-bold">@lead.Listing?.Title</h6>
                                                        <small class="text-muted">
                                                            <i class="bi bi-geo-alt me-1"></i>@lead.Listing?.City, @lead.Listing?.District
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    @lead.Listing?.TransactionType
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                         style="width: 32px; height: 32px;">
                                                        @contactPerson?.DisplayName?.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold small">@contactPerson?.DisplayName</div>
                                                        <small class="text-muted">@(isSeeker ? "Owner" : "Inquirer")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @badgeClass rounded-pill">
                                                    @lead.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="small text-muted">
                                                    @lead.CreatedAt?.ToString("MMM dd, yyyy")
                                                </div>
                                                <div class="text-muted" style="font-size: 0.75rem;">
                                                    @lead.CreatedAt?.ToString("HH:mm")
                                                </div>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Contact" asp-action="LeadDetail" asp-route-id="@lead.Id"
                                                       class="btn btn-sm btn-outline-primary rounded-start">
                                                        <i class="bi bi-eye me-1"></i> View
                                                    </a>
                                                    @if (!isSeeker && lead.Status == "New")
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success"
                                                                data-bs-toggle="modal" data-bs-target="#contactModal-@lead.Id">
                                                            <i class="bi bi-telephone me-1"></i> Contact
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>

                                        @if (!isSeeker && lead.Status == "New")
                                        {
                                            <div class="modal fade" id="contactModal-@lead.Id" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Contact Inquirer</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form asp-controller="Contact" asp-action="UpdateLeadStatus" method="post">
                                                            <input type="hidden" name="leadId" value="@lead.Id" />
                                                            <input type="hidden" name="status" value="Contacted" />
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Add a note (optional)</label>
                                                                    <textarea name="listerNote" class="form-control" rows="3"
                                                                  placeholder="Add any notes or follow-up information..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-primary">Mark as Contacted</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                @if (Model.Any())
                {
                    <div class="card-footer bg-white border-0 pt-3 pb-4 px-4">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Showing @Model.Count() leads
                                </small>
                            </div>
                            <div class="col-md-6 text-end">
                                <div class="btn-group">
                                    <span class="badge bg-primary rounded-pill me-2">New</span>
                                    <span class="badge bg-info rounded-pill me-2">Contacted</span>
                                    <span class="badge bg-success rounded-pill me-2">Closed</span>
                                    <span class="badge bg-danger rounded-pill">Rejected</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .avatar-sm {
            font-size: 0.875rem;
            font-weight: 600;
        }

        .table th {
            font-weight: 600;
            font-size: 0.875rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }
    </style>
}