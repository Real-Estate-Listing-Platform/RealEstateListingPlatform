@model BLL.DTOs.PaginatedResult<BLL.DTOs.UserPackageDto>

@{
    ViewData["Title"] = "My Packages";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
    var activePackages = ViewBag.ActivePackages as List<BLL.DTOs.UserPackageDto> ?? new List<BLL.DTOs.UserPackageDto>();
}

<div class="container py-5">
<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="fw-bold mb-2">My Packages</h1>
        <p class="text-muted">Manage your purchased packages and track usage</p>
    </div>
    <div class="col-md-4 text-md-end">
        <a href="@Url.Action("Index")" class="btn btn-primary">
            <i class="bi bi-cart-plus"></i> Buy More Packages
        </a>
    </div>
</div>

    <!-- Pending Payment Alert -->
    @{
        var pendingPackages = Model?.Items.Where(p => p.Status == "Pending").ToList() ?? new List<BLL.DTOs.UserPackageDto>();
    }
    @if (pendingPackages.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h6 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> Payment Required
            </h6>
            <p class="mb-2">
                You have @pendingPackages.Count package@(pendingPackages.Count > 1 ? "s" : "") waiting for payment completion.
                Complete your payment to activate your packages.
            </p>
            <hr>
            <div class="d-flex gap-2">
                <a href="@Url.Action("MyTransactions", "Payment")" class="btn btn-sm btn-warning">
                    <i class="bi bi-credit-card-fill"></i> View Pending Transactions
                </a>
                <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-cart-plus"></i> Buy New Package
                </a>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Active Packages Summary -->
    @if (activePackages.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h5 class="fw-bold mb-3"><i class="bi bi-check-circle-fill text-success"></i> Active Packages</h5>
            </div>
            @foreach (var userPackage in activePackages)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card border-success h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title fw-bold mb-0">@userPackage.Package.Name</h6>
                                <span class="badge bg-success">Active</span>
                            </div>
                            <p class="text-muted small mb-3">@userPackage.Package.Description</p>

                            <div class="mb-2">
                                @if (userPackage.RemainingListings.HasValue)
                                {
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">Remaining Listings:</small>
                                        <strong>@userPackage.RemainingListings</strong>
                                    </div>
                                }
                                @if (userPackage.RemainingPhotos.HasValue && userPackage.RemainingPhotos > 0)
                                {
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">Extra Photos:</small>
                                        <strong>@userPackage.RemainingPhotos</strong>
                                    </div>
                                }
                                @if (userPackage.VideoAvailable)
                                {
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">Video Upload:</small>
                                        <strong class="text-success">Enabled</strong>
                                    </div>
                                }
                                @if (userPackage.RemainingBoosts.HasValue && userPackage.RemainingBoosts > 0)
                                {
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">Boost Credits:</small>
                                        <strong>@userPackage.RemainingBoosts</strong>
                                    </div>
                                }
                            </div>

                            @if (userPackage.ExpiresAt.HasValue)
                            {
                                var daysLeft = (userPackage.ExpiresAt.Value - DateTime.UtcNow).Days;
                                <div class="mt-2 pt-2 border-top">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> Expires in @daysLeft day@(daysLeft != 1 ? "s" : "")
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> You don't have any active packages. 
            <a href="@Url.Action("Index")" class="alert-link">Browse packages</a> to enhance your listings.
        </div>
    }

    <!-- Filter and Search -->
    <div class="filter-section mb-4">
        <form asp-controller="Package" asp-action="MyPackages" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search packages..." 
                               value="@ViewBag.CurrentSearch">
                    </div>
                </div>
                <div class="col-md-2">
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="Active" selected="@(ViewBag.CurrentStatus == "Active")">Active</option>
                        <option value="Pending" selected="@(ViewBag.CurrentStatus == "Pending")">Pending</option>
                        <option value="Expired" selected="@(ViewBag.CurrentStatus == "Expired")">Expired</option>
                        <option value="Used" selected="@(ViewBag.CurrentStatus == "Used")">Used</option>
                        <option value="Cancelled" selected="@(ViewBag.CurrentStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="packageType" class="form-select">
                        <option value="">All Package Types</option>
                        <option value="ADDITIONAL_LISTING" selected="@(ViewBag.CurrentPackageType == "ADDITIONAL_LISTING")">Additional Listing</option>
                        <option value="PHOTO_PACK" selected="@(ViewBag.CurrentPackageType == "PHOTO_PACK")">Photo Pack</option>
                        <option value="VIDEO_UPLOAD" selected="@(ViewBag.CurrentPackageType == "VIDEO_UPLOAD")">Video Upload</option>
                        <option value="BOOST_LISTING" selected="@(ViewBag.CurrentPackageType == "BOOST_LISTING")">Boost Listing</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="sortBy" class="form-select">
                        <option value="PurchasedAt" selected="@(ViewBag.CurrentSortBy == "PurchasedAt" || ViewBag.CurrentSortBy == null)">Purchase Date</option>
                        <option value="ExpiresAt" selected="@(ViewBag.CurrentSortBy == "ExpiresAt")">Expiration Date</option>
                        <option value="Price" selected="@(ViewBag.CurrentSortBy == "Price")">Price</option>
                        <option value="Name" selected="@(ViewBag.CurrentSortBy == "Name")">Package Name</option>
                        <option value="Status" selected="@(ViewBag.CurrentSortBy == "Status")">Status</option>
                    </select>
                    <input type="hidden" name="sortOrder" value="@(ViewBag.CurrentSortOrder ?? "desc")" />
                </div>
            </div>
            <div class="row g-3 mt-2">
                <div class="col-md-3">
                    <input type="date" name="purchasedAfter" class="form-control" placeholder="Purchased After" 
                           value="@(ViewBag.CurrentPurchasedAfter?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3">
                    <input type="date" name="purchasedBefore" class="form-control" placeholder="Purchased Before" 
                           value="@(ViewBag.CurrentPurchasedBefore?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2">
                    <input type="number" name="pageSize" class="form-control" placeholder="Per Page" 
                           value="@Model.PageSize" min="5" max="50">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-2"></i>Apply Filters
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-controller="Package" asp-action="MyPackages" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-2"></i>Reset
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- All Packages History -->
    <div class="row">
        <div class="col-12">
            <h5 class="fw-bold mb-3"><i class="bi bi-clock-history"></i> Package History (@Model.TotalCount total)</h5>
        </div>
    </div>

    @if (Model == null || Model.Items == null || !Model.Items.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">No package history</p>
                <a href="@Url.Action("Index")" class="btn btn-primary">Browse Packages</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th data-sort="Name" style="cursor: pointer;">
                                    Package 
                                    @if (ViewBag.CurrentSortBy == "Name")
                                    {
                                        <i class="bi bi-@(ViewBag.CurrentSortOrder == "asc" ? "sort-up" : "sort-down")"></i>
                                    }
                                </th>
                                <th>Type</th>
                                <th data-sort="Price" style="cursor: pointer;">
                                    Price 
                                    @if (ViewBag.CurrentSortBy == "Price")
                                    {
                                        <i class="bi bi-@(ViewBag.CurrentSortOrder == "asc" ? "sort-up" : "sort-down")"></i>
                                    }
                                </th>
                                <th data-sort="PurchasedAt" style="cursor: pointer;">
                                    Purchased 
                                    @if (ViewBag.CurrentSortBy == "PurchasedAt" || ViewBag.CurrentSortBy == null)
                                    {
                                        <i class="bi bi-@(ViewBag.CurrentSortOrder == "asc" ? "sort-up" : "sort-down")"></i>
                                    }
                                </th>
                                <th data-sort="Status" style="cursor: pointer;">
                                    Status 
                                    @if (ViewBag.CurrentSortBy == "Status")
                                    {
                                        <i class="bi bi-@(ViewBag.CurrentSortOrder == "asc" ? "sort-up" : "sort-down")"></i>
                                    }
                                </th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var userPackage in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <strong>@userPackage.Package.Name</strong><br/>
                                        <small class="text-muted">@userPackage.Package.Description</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@userPackage.Package.PackageType.Replace("_", " ")</span>
                                    </td>
                                    <td class="fw-bold">@userPackage.Package.Price.ToString("N0") VND</td>
                                    <td>@userPackage.PurchasedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (userPackage.Status)
                                        {
                                            case "Active":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle-fill"></i> Active
                                                </span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-hourglass-split"></i> Pending Payment
                                                </span>
                                                break;
                                            case "Expired":
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-clock-history"></i> Expired
                                                </span>
                                                break;
                                            case "Used":
                                                <span class="badge bg-info">
                                                    <i class="bi bi-check-all"></i> Used
                                                </span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle-fill"></i> Cancelled
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-warning">@userPackage.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (userPackage.Status == "Pending")
                                        {
                                            <a href="@Url.Action("MyTransactions", "Payment")" class="btn btn-sm btn-warning">
                                                <i class="bi bi-credit-card"></i> Complete Payment
                                            </a>
                                        }
                                        else if (userPackage.Status == "Active")
                                        {
                                            if (userPackage.RemainingListings.HasValue)
                                            {
                                                <span class="badge bg-light text-dark me-1">@userPackage.RemainingListings Listings</span>
                                            }
                                            if (userPackage.RemainingPhotos.HasValue && userPackage.RemainingPhotos > 0)
                                            {
                                                <span class="badge bg-light text-dark me-1">@userPackage.RemainingPhotos Photos</span>
                                            }
                                            if (userPackage.VideoAvailable)
                                            {
                                                <span class="badge bg-light text-dark me-1">
                                                    <i class="bi bi-camera-video"></i> Video
                                                </span>
                                            }
                                            if (userPackage.RemainingBoosts.HasValue && userPackage.RemainingBoosts > 0)
                                            {
                                                <span class="badge bg-light text-dark me-1">@userPackage.RemainingBoosts Boosts</span>
                                            }
                                        }
                                        else if (userPackage.ExpiresAt.HasValue)
                                        {
                                            <small class="text-muted">
                                                Expired @userPackage.ExpiresAt.Value.ToString("MMM dd, yyyy")
                                            </small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="pagination-info text-muted">
                            @if (Model.TotalCount > 0)
                            {
                                <text>Showing @Model.StartIndex to @Model.EndIndex of @Model.TotalCount entries</text>
                            }
                            else
                            {
                                <text>No entries found</text>
                            }
                        </div>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                                    <a class="page-link" 
                                       href="@Url.Action("MyPackages", new { 
                                           searchTerm = ViewBag.CurrentSearch, 
                                           status = ViewBag.CurrentStatus, 
                                           packageType = ViewBag.CurrentPackageType,
                                           purchasedAfter = ViewBag.CurrentPurchasedAfter,
                                           purchasedBefore = ViewBag.CurrentPurchasedBefore,
                                           sortBy = ViewBag.CurrentSortBy,
                                           sortOrder = ViewBag.CurrentSortOrder,
                                           pageNumber = Model.PageNumber - 1, 
                                           pageSize = Model.PageSize 
                                       })"
                                       tabindex="-1">Previous</a>
                                </li>

                                @{
                                    int startPage = Math.Max(1, Model.PageNumber - 2);
                                    int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                                    
                                    if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" 
                                               href="@Url.Action("MyPackages", new { 
                                                   searchTerm = ViewBag.CurrentSearch, 
                                                   status = ViewBag.CurrentStatus, 
                                                   packageType = ViewBag.CurrentPackageType,
                                                   purchasedAfter = ViewBag.CurrentPurchasedAfter,
                                                   purchasedBefore = ViewBag.CurrentPurchasedBefore,
                                                   sortBy = ViewBag.CurrentSortBy,
                                                   sortOrder = ViewBag.CurrentSortOrder,
                                                   pageNumber = 1, 
                                                   pageSize = Model.PageSize 
                                               })">1</a>
                                        </li>
                                        if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                    }

                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link" 
                                               href="@Url.Action("MyPackages", new { 
                                                   searchTerm = ViewBag.CurrentSearch, 
                                                   status = ViewBag.CurrentStatus, 
                                                   packageType = ViewBag.CurrentPackageType,
                                                   purchasedAfter = ViewBag.CurrentPurchasedAfter,
                                                   purchasedBefore = ViewBag.CurrentPurchasedBefore,
                                                   sortBy = ViewBag.CurrentSortBy,
                                                   sortOrder = ViewBag.CurrentSortOrder,
                                                   pageNumber = i, 
                                                   pageSize = Model.PageSize 
                                               })">@i</a>
                                        </li>
                                    }

                                    if (endPage < Model.TotalPages)
                                    {
                                        if (endPage < Model.TotalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" 
                                               href="@Url.Action("MyPackages", new { 
                                                   searchTerm = ViewBag.CurrentSearch, 
                                                   status = ViewBag.CurrentStatus, 
                                                   packageType = ViewBag.CurrentPackageType,
                                                   purchasedAfter = ViewBag.CurrentPurchasedAfter,
                                                   purchasedBefore = ViewBag.CurrentPurchasedBefore,
                                                   sortBy = ViewBag.CurrentSortBy,
                                                   sortOrder = ViewBag.CurrentSortOrder,
                                                   pageNumber = Model.TotalPages, 
                                                   pageSize = Model.PageSize 
                                               })">@Model.TotalPages</a>
                                        </li>
                                    }
                                }

                                <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                                    <a class="page-link" 
                                       href="@Url.Action("MyPackages", new { 
                                           searchTerm = ViewBag.CurrentSearch, 
                                           status = ViewBag.CurrentStatus, 
                                           packageType = ViewBag.CurrentPackageType,
                                           purchasedAfter = ViewBag.CurrentPurchasedAfter,
                                           purchasedBefore = ViewBag.CurrentPurchasedBefore,
                                           sortBy = ViewBag.CurrentSortBy,
                                           sortOrder = ViewBag.CurrentSortOrder,
                                           pageNumber = Model.PageNumber + 1, 
                                           pageSize = Model.PageSize 
                                       })">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .filter-section {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        th[data-sort] {
            cursor: pointer;
            user-select: none;
            transition: background-color 0.2s ease;
        }

        th[data-sort]:hover {
            background-color: #e9ecef;
        }

        th i {
            font-size: 0.8rem;
            margin-left: 0.25rem;
        }
    </style>
}

@section Scripts {
    <script>
        // Handle table header sorting
        document.querySelectorAll('th[data-sort]').forEach(header => {
            header.addEventListener('click', function() {
                const sortField = this.getAttribute('data-sort');
                const form = document.querySelector('form');
                const sortOrderInput = form.querySelector('input[name=\"sortOrder\"]');
                const sortByInput = form.querySelector('select[name=\"sortBy\"]');
                
                // Toggle order if clicking same field, otherwise default to desc
                if (sortByInput.value === sortField) {
                    sortOrderInput.value = sortOrderInput.value === 'desc' ? 'asc' : 'desc';
                } else {
                    sortByInput.value = sortField;
                    sortOrderInput.value = 'desc';
                }
                
                // Submit the form
                form.submit();
            });
        });
    </script>
}
