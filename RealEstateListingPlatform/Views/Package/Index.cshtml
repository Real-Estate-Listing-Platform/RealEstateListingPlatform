@model List<BLL.DTOs.PackageDto>

@{
    ViewData["Title"] = "Package Marketplace";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
    var packageType = ViewBag.PackageType as string;
}

<div class="container py-5">
<div class="row mb-4">
    <div class="col-12 text-center">
        <h1 class="fw-bold mb-2">Choose Your Package</h1>
        <p class="text-muted">Enhance your listings with our premium packages</p>
    </div>
</div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Package Type Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group d-flex flex-wrap justify-content-center gap-2" role="group">
                <a href="@Url.Action("Index")" class="btn @(string.IsNullOrEmpty(packageType) ? "btn-primary" : "btn-outline-primary")">
                    All Packages
                </a>
                <a href="@Url.Action("Index", new { type = "ADDITIONAL_LISTING" })" class="btn @(packageType == "ADDITIONAL_LISTING" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-plus-circle"></i> Additional Listings
                </a>
                <a href="@Url.Action("Index", new { type = "PHOTO_PACK" })" class="btn @(packageType == "PHOTO_PACK" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-images"></i> Photo Packs
                </a>
                <a href="@Url.Action("Index", new { type = "VIDEO_UPLOAD" })" class="btn @(packageType == "VIDEO_UPLOAD" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-camera-video"></i> Video Upload
                </a>
                <a href="@Url.Action("Index", new { type = "BOOST_LISTING" })" class="btn @(packageType == "BOOST_LISTING" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-rocket"></i> Boost Listing
                </a>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">No packages available at the moment</p>
                <a href="@Url.Action("Index")" class="btn btn-primary">View All Packages</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var package in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm package-card @(package.PackageType == "BOOST_LISTING" ? "border-warning" : "")">
                        @if (package.PackageType == "BOOST_LISTING")
                        {
                            <div class="card-header bg-warning text-white text-center py-2">
                                <i class="bi bi-star-fill"></i> Featured
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3">
                                @switch (package.PackageType)
                                {
                                    case "ADDITIONAL_LISTING":
                                        <i class="bi bi-plus-circle-fill text-primary display-4"></i>
                                        break;
                                    case "PHOTO_PACK":
                                        <i class="bi bi-images text-success display-4"></i>
                                        break;
                                    case "VIDEO_UPLOAD":
                                        <i class="bi bi-camera-video-fill text-info display-4"></i>
                                        break;
                                    case "BOOST_LISTING":
                                        <i class="bi bi-rocket-fill text-warning display-4"></i>
                                        break;
                                    default:
                                        <i class="bi bi-box-seam text-secondary display-4"></i>
                                        break;
                                }
                            </div>

                            <h4 class="card-title text-center fw-bold">@package.Name</h4>
                            <p class="text-center text-muted small mb-3">@package.Description</p>

                            <div class="price-section text-center mb-3">
                                <h2 class="text-primary fw-bold mb-0">
                                    @package.Price.ToString("N0") <small class="text-muted fs-6">VND</small>
                                </h2>
                            </div>

                            <ul class="list-unstyled mb-4">
                                @if (package.ListingCount.HasValue && package.ListingCount > 0)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        @package.ListingCount additional listing@(package.ListingCount > 1 ? "s" : "")
                                    </li>
                                }
                                @if (package.PhotoLimit.HasValue && package.PhotoLimit > 0)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        +@package.PhotoLimit photos
                                    </li>
                                }
                                @if (package.AllowVideo)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Video upload enabled
                                    </li>
                                }
                                @if (package.BoostDays.HasValue && package.BoostDays > 0)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Boost for @package.BoostDays days
                                    </li>
                                }
                                @if (package.DurationDays.HasValue && package.DurationDays > 0)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Valid for @package.DurationDays days
                                    </li>
                                }
                            </ul>

                            <div class="mt-auto">
                                <a href="@Url.Action("Purchase", new { id = package.Id })" 
                                   class="btn @(package.PackageType == "BOOST_LISTING" ? "btn-warning" : "btn-primary") w-100 py-2">
                                    <i class="bi bi-cart-plus"></i> Purchase Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="row mt-5">
        <div class="col-12 text-center">
            <a href="@Url.Action("MyPackages")" class="btn btn-outline-primary">
                <i class="bi bi-box-seam"></i> View My Packages
            </a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .package-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 12px;
        }

        .package-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

        .price-section {
            padding: 1rem 0;
            border-top: 1px solid #dee2e6;
            border-bottom: 1px solid #dee2e6;
        }

        .btn-group .btn {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
        }
    </style>
}
