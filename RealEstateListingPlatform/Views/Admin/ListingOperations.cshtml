@model IEnumerable<RealEstateListingPlatform.Models.ListingApprovalViewModel>

@{
    ViewData["Title"] = "Admin - Listing Approval";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-check"></i> Pending Listings Approval</h2>
        <span class="badge bg-primary">@Model.Count() Pending Requests</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Listing Details</th>
                        <th>Price</th>
                        <th>Lister</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted" style="width: 150px;">
                                @item.CreatedAt.ToString("MMM dd, yyyy") <br />
                                <small>@item.CreatedAt.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <div class="fw-bold">@item.Title</div>
                                <div class="text-muted small">@item.PropertyType - @item.Address</div>
                            </td>
                            <td class="text-success fw-bold">
                                $@item.Price.ToString("N0")
                            </td>
                            <td>@item.ListerName</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <!-- Approve Form -->
                                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Approve this listing?')">
                                        <button type="submit" class="btn btn-sm btn-outline-success mx-1">
                                            <i class="bi bi-check-lg"></i> Approve
                                        </button>
                                    </form>

                                    <!-- Reject Trigger (Modal) -->
                                    <button class="btn btn-sm btn-outline-danger mx-1" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id">
                                        <i class="bi bi-x-lg"></i> Reject
                                    </button>
                                </div>

                                <!-- Modal for Rejection Reason -->
                                <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="Reject" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-danger">Reject Listing</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="text-start">Please provide a reason for rejecting <strong>@item.Title</strong>:</p>
                                                    <textarea name="reason" class="form-control" rows="3" placeholder="e.g. Invalid price, inappropriate images..." required></textarea>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Confirm Reject</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional: Add Bootstrap Icons if not already present in Layout -->
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}