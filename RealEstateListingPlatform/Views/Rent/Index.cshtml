@model IEnumerable<DAL.Models.Listing>

@{
    ViewData["Title"] = "Nhà cho thuê";
}

<div class="rent-content">
    <div class="container mt-4">
        <h1 class="mb-4">🏠 Nhà cho thuê</h1>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card listing-card h-100">
                        @if (item.ListingMedia.Any())
                        {
                            <img src="@item.ListingMedia.First().Url" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Không có hình ảnh</span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-success fw-bold">@item.Price.ToString("N0") VNĐ/tháng</p>
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt"></i>
                                @item.StreetName, @item.Ward, @item.District, @item.City
                            </p>
                            <p class="card-text">
                                <i class="fas fa-bed"></i> @item.Bedrooms phòng ngủ
                                <i class="fas fa-bath ms-3"></i> @item.Bathrooms phòng tắm
                                <i class="fas fa-layer-group ms-3"></i> @item.Floors tầng
                            </p>
                            <p class="card-text"><small class="text-muted">Đăng bởi: @item.Lister.DisplayName</small></p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "ListingDetail", new { id = item.Id })" class="btn btn-primary w-100">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="col-12">
                    <div class="alert alert-info">
                        Hiện không có nhà cho thuê nào.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .listing-card {
        transition: transform 0.3s;
        border: 1px solid #e0e0e0;
    }

        .listing-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
</style>