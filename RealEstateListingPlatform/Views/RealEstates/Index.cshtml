@model IEnumerable<RealEstateListingPlatform.Models.Listing>

@{
    ViewData["Title"] = "RealEstate";
}

<style>
    /* Minimal styles để mô phỏng layout listing */
    .re-listing-page {
        max-width: 1100px;
        margin: 24px auto;
        font-family: Arial, Helvetica, sans-serif;
    }

    .re-header {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 18px;
    }

    .re-logo {
        font-weight: 700;
        color: #e74c3c;
        font-size: 20px;
    }

    .re-search {
        flex: 1;
        display: flex;
        gap: 8px;
    }

        .re-search input {
            flex: 1;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ddd;
        }

        .re-search button {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 14px;
            border-radius: 6px;
        }

    .re-filters {
        display: flex;
        gap: 8px;
        margin: 12px 0 20px 0;
        align-items: center;
    }

    .filter-btn {
        border: 1px solid #e6e6e6;
        padding: 8px 12px;
        border-radius: 6px;
        background: white;
        color: #333;
    }

    .re-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .re-card {
        display: flex;
        gap: 16px;
        border: 1px solid #eee;
        padding: 12px;
        border-radius: 8px;
        background: white;
        box-shadow: 0 1px 2px rgba(0,0,0,0.03);
    }

    .re-card-media {
        width: 320px;
        height: 200px;
        background: #f5f5f5;
        border-radius: 6px;
        overflow: hidden;
        position: relative;
    }

        .re-card-media img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .re-badge {
        position: absolute;
        left: 8px;
        top: 8px;
        background: #ff5b5b;
        color: white;
        padding: 6px 8px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .re-card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .re-title {
        font-size: 18px;
        font-weight: 700;
        color: #1f2937;
        text-transform: uppercase;
        margin-bottom: 8px;
    }

    .re-meta {
        color: #6b7280;
        font-size: 14px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .re-desc {
        margin-top: 10px;
        color: #374151;
    }

    .re-actions {
        margin-top: 12px;
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .re-price {
        color: #dc2626;
        font-weight: 800;
        font-size: 20px;
    }
    @@media (max-width:900px) {
        .re-card {
            flex-direction: column;
        }

        .re-card-media {
            width: 100%;
            height: 220px;
        }
    }
</style>

<div class="re-listing-page">
    <div class="re-header">
        <div class="re-search">
            <input placeholder="Tìm kiếm vị trí, tiêu đề..." />
            <button> Tìm kiếm </button>
        </div>
    </div>

    <div class="re-filters">
        <button class="filter-btn">Lọc</button>
        <button class="filter-btn">Loại nhà đất</button>
        <button class="filter-btn">Khoảng giá</button>
        <div style="margin-left:auto; color:#6b7280">Hiện có @Model?.Count() bất động sản</div>
    </div>

    <div class="re-list">
        @if (Model == null || !Model.Any())
        {
            <div class="filter-btn">Không có dữ liệu để hiển thị.</div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="re-card">
                    <div class="re-card-media">
                        <span class="re-badge">VIP</span>
                        @* placeholder image *@
                        <img src="https://via.placeholder.com/640x400.png?text=Image" alt="image" />
                    </div>

                    <div class="re-card-body">
                        <div>
                            <div class="re-title">@item.Title</div>

                            <div class="re-meta">
                                <div class="re-price">
                                    @(
                                        item.Price > 1000000000m
                                        ? (item.Price/1000000000m).ToString("0.##") + " tỷ"
                                        : item.Price.ToString("N0") + " ₫"
                                    )
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(item.Area) ? "-" : item.Area)</div>
                                <div>@(item.Price != 0 ? (item.Price == 0 ? "-" : "") : "-")</div>
                                <div>@(string.IsNullOrWhiteSpace(item.City) ? "-" : item.City)</div>
                                <div>@item.Status</div>
                                <div>• @item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                            </div>

                            <div class="re-desc">
                                @(
                                    string.IsNullOrWhiteSpace(item.StreetName)
                                    ? "Mô tả: —"
                                    : ("Địa chỉ: " + item.StreetName + (string.IsNullOrWhiteSpace(item.HouseNumber) ? "" : ", " + item.HouseNumber))
                                )
                            </div>
                        </div>

                        <div class="re-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="filter-btn">Xem chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="filter-btn">Chỉnh sửa</a>
                            <div style="margin-left:auto; color:#9ca3af; font-size:13px;">#@item.Id.ToString().Substring(0,8)</div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
