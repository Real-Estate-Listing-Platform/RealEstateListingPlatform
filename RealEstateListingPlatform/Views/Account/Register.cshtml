@model RealEstateListingPlatform.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="auth-toggle">
    <a asp-action="Login" class="js-auth-switch">Login</a>
    <a href="#" class="active">Sign Up</a>
</div>

<form id="registerForm" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="auth-form">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="mb-2">
        <input asp-for="FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="Full Name" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email Address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
     <div class="mb-2">
        <input asp-for="PhoneNumber" class="form-control" autocomplete="tel" aria-required="true" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-2 position-relative">
        <input asp-for="Password" class="form-control password-input" autocomplete="new-password" aria-required="true" placeholder="Password" />
        <span class="password-toggle-icon"><i class="bi bi-eye"></i></span>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="password-requirements mb-2">
        <p class="requirements-title">Password requirements:</p>
        <ul class="requirements-list">
            <li id="req-length" class="requirement-item"><span class="bullet">●</span> Min. 8 chars</li>
            <li id="req-uppercase" class="requirement-item"><span class="bullet">●</span> 1 uppercase (A-Z)</li>
            <li id="req-number" class="requirement-item"><span class="bullet">●</span> 1 number (0-9)</li>
            <li id="req-special" class="requirement-item"><span class="bullet">●</span> 1 special character (!@@#$%)</li>
        </ul>
    </div>
    
    <div class="mb-3">
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button id="registerSubmit" type="submit" class="btn btn-auth-primary">Create Account</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Password Toggle
            $('.password-toggle-icon').click(function() {
                var input = $(this).siblings('input');
                var icon = $(this).find('i');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            // Real-time Password Validation
            $('.password-input').on('input', function() {
                var password = $(this).val();
                
                // Min 8 chars
                if (password.length >= 8) {
                    $('#req-length').addClass('valid');
                } else {
                    $('#req-length').removeClass('valid');
                }

                // 1 Uppercase
                if (/[A-Z]/.test(password)) {
                    $('#req-uppercase').addClass('valid');
                } else {
                    $('#req-uppercase').removeClass('valid');
                }

                // 1 Number
                if (/[0-9]/.test(password)) {
                    $('#req-number').addClass('valid');
                } else {
                    $('#req-number').removeClass('valid');
                }

                // 1 Special char
                if (/[!@@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password)) {
                    $('#req-special').addClass('valid');
                } else {
                    $('#req-special').removeClass('valid');
                }
            });
        });
    </script>
}
