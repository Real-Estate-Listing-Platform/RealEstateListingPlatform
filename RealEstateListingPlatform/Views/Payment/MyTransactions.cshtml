@model List<BLL.DTOs.TransactionDto>

@{
    ViewData["Title"] = "My Transactions";
    Layout = "~/Views/Shared/_ListerLayout.cshtml";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="fw-bold mb-2">
                <i class="bi bi-receipt-cutoff"></i> My Transactions
            </h1>
            <p class="text-muted">View your payment history and pending transactions</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a href="@Url.Action("Index", "Package")" class="btn btn-primary">
                <i class="bi bi-cart-plus"></i> Buy More Packages
            </a>
        </div>
    </div>

    @* Pending Transactions Alert *@
    @{
        var pendingTransactions = Model?.Where(t => t.Status == "Pending").ToList() ?? new List<BLL.DTOs.TransactionDto>();
    }
    @if (pendingTransactions.Any())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h6 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> Pending Payments
            </h6>
            <p class="mb-2">
                You have @pendingTransactions.Count pending transaction@(pendingTransactions.Count > 1 ? "s" : "").
                Complete your payment to activate your packages.
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3 mb-4">No transaction history</p>
                <a href="@Url.Action("Index", "Package")" class="btn btn-primary">
                    <i class="bi bi-cart-plus"></i> Purchase Your First Package
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Transaction ID</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                        <th>Payment Method</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.OrderByDescending(t => t.CreatedAt))
                                    {
                                        <tr>
                                            <td>
                                                <code class="text-muted">@transaction.Id.ToString().Substring(0, 8)</code>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @transaction.TransactionType.Replace("_", " ")
                                                </span>
                                            </td>
                                            <td class="fw-bold">@transaction.Amount.ToString("N0") VND</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(transaction.PaymentMethod))
                                                {
                                                    <span class="text-muted">@transaction.PaymentMethod</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @switch (transaction.Status)
                                                {
                                                    case "Completed":
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle-fill"></i> Completed
                                                        </span>
                                                        break;
                                                    case "Pending":
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-hourglass-split"></i> Pending
                                                        </span>
                                                        break;
                                                    case "Failed":
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle-fill"></i> Failed
                                                        </span>
                                                        break;
                                                    case "Refunded":
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-arrow-counterclockwise"></i> Refunded
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@transaction.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div>@transaction.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@transaction.CreatedAt.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (transaction.Status == "Pending")
                                                {
                                                    <form asp-controller="Payment" asp-action="RetryPayment" method="post" class="d-inline">
                                                        <input type="hidden" name="transactionId" value="@transaction.Id" />
                                                        <button type="submit" class="btn btn-sm btn-warning">
                                                            <i class="bi bi-credit-card-fill"></i> Pay Now
                                                        </button>
                                                    </form>
                                                }
                                                else if (transaction.Status == "Completed")
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-check-lg"></i>
                                                    </span>
                                                    @if (transaction.CompletedAt.HasValue)
                                                    {
                                                        <div>
                                                            <small class="text-muted">
                                                                @transaction.CompletedAt.Value.ToString("MMM dd, HH:mm")
                                                            </small>
                                                        </div>
                                                    }
                                                }
                                                else if (transaction.Status == "Failed")
                                                {
                                                    <form asp-controller="Payment" asp-action="RetryPayment" method="post" class="d-inline">
                                                        <input type="hidden" name="transactionId" value="@transaction.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-arrow-clockwise"></i> Retry
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(transaction.Notes))
                                        {
                                            <tr class="table-light">
                                                <td colspan="7" class="small text-muted">
                                                    <i class="bi bi-info-circle"></i> <strong>Note:</strong> @transaction.Notes
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @* Transaction Statistics *@
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-center border-success">
                            <div class="card-body">
                                <h3 class="text-success mb-0">@Model.Count(t => t.Status == "Completed")</h3>
                                <small class="text-muted">Completed</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-warning">
                            <div class="card-body">
                                <h3 class="text-warning mb-0">@Model.Count(t => t.Status == "Pending")</h3>
                                <small class="text-muted">Pending</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-danger">
                            <div class="card-body">
                                <h3 class="text-danger mb-0">@Model.Count(t => t.Status == "Failed")</h3>
                                <small class="text-muted">Failed</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-primary">
                            <div class="card-body">
                                <h3 class="text-primary mb-0">@Model.Where(t => t.Status == "Completed").Sum(t => t.Amount).ToString("N0")</h3>
                                <small class="text-muted">Total Spent (VND)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .table > tbody > tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        
        code {
            font-size: 0.85rem;
            padding: 0.2rem 0.4rem;
            background-color: #f8f9fa;
            border-radius: 3px;
        }
    </style>
}
