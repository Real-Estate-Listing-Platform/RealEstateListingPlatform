@model DAL.Models.Listing

@{
    ViewData["Title"] = "Delete Listing";
}

<div class="container mt-4">

    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Confirmation</h4>
        </div>

        <div class="card-body">
            <h5 class="text-danger mb-3">Are you sure you want to delete this listing?</h5>

            <!-- Listing Summary -->
            <div class="border rounded p-3 mb-4 bg-light">
                <h6 class="fw-bold">@Model.Title</h6>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Type:</strong> @Model.TransactionType - @Model.PropertyType</p>
                        <p class="mb-1"><strong>Price:</strong> @String.Format("{0:N0}", Model.Price) VND</p>
                        <p class="mb-1"><strong>Status:</strong> <span class="badge bg-secondary">@Model.Status</span></p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Location:</strong></p>
                        <p class="mb-0 text-muted">
                            @(!string.IsNullOrEmpty(Model.HouseNumber) ? Model.HouseNumber + ", " : "")
                            @(!string.IsNullOrEmpty(Model.StreetName) ? Model.StreetName + ", " : "")
                            @Model.Ward, @Model.Area, @Model.City
                        </p>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <p class="mb-0"><strong>Created:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-0"><strong>Last Updated:</strong> @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="alert alert-warning">
                <i class="bi bi-info-circle"></i>
                <strong>Warning:</strong> This action cannot be undone. All related data (favorites, leads, media, etc.) will also be deleted.
            </div>

            <!-- Statistics -->
            <div class="border rounded p-3 mb-4">
                <h6>Related Data That Will Be Deleted:</h6>
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="p-2">
                            <h3 class="text-danger">@Model.Favorites.Count</h3>
                            <small>Favorites</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="p-2">
                            <h3 class="text-danger">@Model.Leads.Count</h3>
                            <small>Leads</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="p-2">
                            <h3 class="text-danger">@Model.ListingMedia.Count</h3>
                            <small>Media Files</small>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <div class="p-2">
                            <h3 class="text-danger">@Model.Reports.Count</h3>
                            <small>Reports</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between">
                <div>
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash"></i> Delete Permanently
                        </button>
                    </form>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Instead
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">