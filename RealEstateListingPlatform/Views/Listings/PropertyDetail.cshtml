@model RealEstateListingPlatform.Models.PropertyViewModel

@{
    ViewData["Title"] = "Property Detail";
    Layout = "_Layout";
}


<div class="container mt-4 mb-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="PropertyListing" asp-route-type="@(Model.Status == "For Sale" ? "sale" : "rent")">@(Model.Status == "For Sale" ? "For Sale" : "For Rent")</a></li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <img src="@Model.ImageUrl" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;" alt="@Model.Title">
            </div>

            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h2 class="fw-bold text-dark">@Model.Title</h2>
                    <span class="badge @(Model.Status == "For Sale" ? "bg-primary" : "bg-success") rounded-pill px-3 py-2">
                        @(Model.Status == "For Sale" ? "For Sale" : "For Rent")
                    </span>
                </div>
                <p class="text-muted"><i class="bi bi-geo-alt-fill text-primary"></i> @Model.Location</p>
                <hr class="my-4 opacity-25">

                <h5 class="fw-bold mb-3">Overall Information</h5>
                <div class="row text-center g-3 mb-4">
                    <div class="col-4 col-md-3">
                        <div class="p-3 bg-light rounded-4">
                            <i class="bi bi-aspect-ratio fs-4 text-primary"></i>
                            <p class="small mb-0 mt-2 text-muted">Area</p>
                            <p class="fw-bold mb-0">@Model.Area m²</p>
                        </div>
                    </div>
                    <div class="col-4 col-md-3">
                        <div class="p-3 bg-light rounded-4">
                            <i class="bi bi-door-open fs-4 text-primary"></i>
                            <p class="small mb-0 mt-2 text-muted">Bedroom</p>
                            <p class="fw-bold mb-0">@Model.Bedrooms</p>
                        </div>
                    </div>
                    <div class="col-4 col-md-3">
                        <div class="p-3 bg-light rounded-4">
                            <i class="bi bi-droplet fs-4 text-primary"></i>
                            <p class="small mb-0 mt-2 text-muted">Bathroom</p>
                            <p class="fw-bold mb-0">@Model.Bathrooms</p>
                        </div>
                    </div>
                </div>

                <h5 class="fw-bold mb-3">Detail Description</h5>
                <p class="text-muted lh-lg">
                    Welcome to your ideal living space. This property boasts a prime location, modern design, and full amenities. 
                    Located in a safe and quiet residential area, close to public amenities such as schools, hospitals, and shopping centers.
                    Suitable for both residential purposes and sustainable investment returns.
                </p>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 sticky-top" style="top: 100px;">
                <p class="text-muted mb-1">Price</p>
                <h3 class="fw-bold text-primary mb-4">@Model.FormattedPrice</h3>
                
                <div class="d-grid gap-2">
                    <button class="btn btn-primary py-3 rounded-pill fw-bold shadow-sm">
                        <i class="bi bi-telephone-fill me-2"></i> Contact now
                    </button>
                    <button class="btn btn-outline-primary py-3 rounded-pill fw-bold">
                        <i class="bi bi-chat-dots-fill me-2"></i> Chat on Zalo
                    </button>
                </div>

                <hr class="my-4 opacity-25">

                <div class="agent-info d-flex align-items-center">
                    <div>
                        <p class="mb-0 fw-bold">Nguyễn Lê Nhật</p>
                        <p class="small text-muted mb-0">Consultant</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
            transition: color 0.3s;
        }

            .breadcrumb-item a:hover {
                color: #0d6efd;
            }
        
        .bg-light i {
            transition: transform 0.3s ease;
        }

        .bg-light:hover i {
            transform: translateY(-3px);
        }

        @@media (max-width: 991.98px) {
            .sticky-top {
                position: relative !important;
                top: 0 !important;
            }
        }
    </style>
}